<section class="b-0">
	<div class="container">
		<div class="row">
			<div class="col-lg-7 order-lg-2">
				<div class="heading-title mt-0">
					<h1>Intervention Request Form</h1>
				</div>

	
		<%= form_for @intervention do |f| %>
			<div>
			<%= f.select :customer_id, options_for_select(Customer.all.map{ |c| [ c.company_contact_name, c.id ] }), {:include_blank => 'Choose a customer...'} %>
			<br>
			<%= f.grouped_collection_select :building_id, Customer.order(:company_contact_name), :buildings, :company_contact_name, :customer_id, :id, 
				:include_blank => 'Choose a building...'  %>
			<br>
			<%= f.grouped_collection_select :battery_id, Building.order(:id), :batteries, :customer_id, :id, :id, 
				:include_blank => 'Choose a battery...'  %>
			<br>
			<%= f.grouped_collection_select :column_id, Battery.order(:id), :columns, :building_id, :id, :id, 
				:include_blank => 'Choose a column...'  %>
			<br>
			<%= f.grouped_collection_select :elevator_id, Column.order(:id), :elevators, :battery_id, :id, :id, 
				:include_blank => 'Choose an elevator...'  %>
			<br>
			</div>
			<div style="margin-top:50px" class="actions"><%= f.submit %></div>
	</div>
</section>
			<% end %>                     

